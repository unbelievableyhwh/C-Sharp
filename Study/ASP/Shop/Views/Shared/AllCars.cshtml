@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="Model.name" />
    <h2>@Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Цена: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-carID="@Model.id">Add to shopcart</a></p>
</div> 